<%= form_for(admin_session) do |f| %>
    <%= render :partial => 'layouts/error_block', :locals => {:obj => admin_session} %>
    <div class="login_fields_wrap">
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </p>
    </div>
    <p class="top_20_wrap small_label">
      <%= f.check_box :remember_me %><%= f.label :remember_me %><br/>
    </p>
    <p class="top_20_wrap">
      <%= link_to "Forgot your password", "#" %> <span class="text_spacer">or</span> <%= link_to "Need Help", "#" %>
    </p>
    <p class="top_20_wrap"><%= f.submit "Sign In", :class => 'login_btn' %></p>
<% end %>
